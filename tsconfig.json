{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es2017"
		],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"removeComments": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
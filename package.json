{
	"name": "vscode-plonefs",
	"displayName": "PloneFS",
	"description": "Open Plone sites",
	"icon": "images/PloneFS.png",
	"version": "0.1.3",
	"publisher": "derekdavenport",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/derekdavenport/vscode-plonefs",
		"type": "git"
	},
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onFileSystem:plone",
		"onCommand:plonefs.workspace"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "plonefs.workspace",
				"title": "Open Plone Workspace",
				"category": "PloneFS"
			},
			{
				"command": "plonefs.editTitle",
				"title": "Edit Title",
				"category": "PloneFS"
			},
			{
				"command": "plonefs.editDescription",
				"title": "Edit Description",
				"category": "PloneFS"
			},
			{
				"command": "plonefs.editLocalCss",
				"title": "Edit Local CSS",
				"category": "PloneFS"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceScheme == plone",
					"command": "plonefs.editTitle",
					"group": "PloneFS"
				},
				{
					"when": "resourceScheme == plone",
					"command": "plonefs.editDescription",
					"group": "PloneFS"
				},
				{
					"when": "resourceScheme == plone",
					"command": "plonefs.editLocalCss",
					"group": "PloneFS"
				}
			],
			"commandPalette": [
				{
					"command": "plonefs.editTitle",
					"when": "workbenchState == workspace"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vscode:package": "vsce package",
		"vscode:publish": "vsce publish",
		"compile": "npx copyfiles ssl/* out && tsc -p ./",
		"watch": "npx copyfiles ssl/* out && tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:integration": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/jest": "^23.3.10",
		"@types/node": "^10.12.12",
		"copyfiles": "^2.1.0",
		"tslint": "^5.11.0",
		"typescript": "^3.2.2",
		"vscode": "^1.1.26"
	},
	"dependencies": {
		"mime": "^2.4.0",
		"ssl-root-cas": "^1.2.5"
	}
}
